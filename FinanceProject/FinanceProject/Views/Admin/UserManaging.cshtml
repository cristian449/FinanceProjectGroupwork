@model IEnumerable<FinanceProject.Models.User> 
@using FinanceProject.Models
@{
    var sortBy = ViewBag.SortBy as SortUsersBy?;
}


<h2>User Management</h2>



@*OK now userActive work, at least it shows Admin as Active when logging in*@
<h2>Currently active Users</h2>
<div class="scrollable-table">
    <table>
        <form asp-action="UserManaging" method="get" style="margin-bottom:1em;">
            <label>Sort users by:</label>
            <select name="sortBy" onchange="this.form.submit()">
                <option value="">All</option>
                @foreach (SortUsersBy category in Enum.GetValues(typeof(SortUsersBy)))
                {
                    <option value="@category" selected="@(ViewBag.SortBy == category ? "selected" : null)">
                        @category
                    </option>
                }
            </select>
        </form>
        <tr>
            <th>User ID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Account Created on</th>
        </tr>
        @foreach (var user in Model.Where(i => i.IsActive == true))
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.CreatedAt</td>
                <td>
                    <a asp-action="UserDetails" asp-route-id="@user.Id" class="action-btn btn btn-info">Details</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="action-btn btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                    <form asp-action="ChangeRole" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="action-btn btn btn-danger">Make Admin</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>

