@model LoginViewmodel

@{
    ViewBag.Title = "User Login";
}



<div class="row">
    <div class="col-md-6">
        <H1>Login in to your account</H1>
        <hr />

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Please Enter your email here" />
                <span asp-validation-for="Email" class="text-danger"></span>
                
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control"  placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="AdminKey" class="control-label"></label>
                <input asp-for="AdminKey" class="form-control" placeholder="This is reserved for site admins only" />
                <small class="form-text text-muted">This is reserved for admins only</small>
                <span asp-validation-for="AdminKey" class="text-danger"></span>


            </div>

           <div class="form-group">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>



            <button type="submit" class="btn btn-primary">Login</button>

            <a asp-area="" asp-controller="Accounts" asp-action="Register" class="navbar-text mt-3"> 
            If you dont have an account you can register here now
            </a>

            

            

        </Form>

        <Form>

            <button asp-action="Back" type="submit" class="btn btn-primary mt-2">Back</button>
            
        </Form>
    </div>
</div>
