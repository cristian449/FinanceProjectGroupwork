@model FinanceProject.Models.Invoice
@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4"><span style="color:red; font-weight: bold">Delete </span>@Model.Header</h1> <br>

    <h1 class="display-5" style="font-weight: bold; color: red">Are you sure you want to delete this?</h1> <br>
    <a asp-action="Index">↩ Back to invoices</a>

    <div class="invoiceDetailsHolder">
        <div class="invoiceDetailHolder">
            <label>@Html.DisplayNameFor(Model => Model.Header):</label>
            <a href="#" style="float: right">Edit</a><br>
            <textarea disabled class="invoiceDetailValue" rows="1" cols="50">@Html.DisplayFor(Model => Model.Header)</textarea>
        </div>

        <div class="invoiceDetailHolder">
            <label>@Html.DisplayNameFor(Model => Model.Description):</label><br>
            <textarea disabled class="invoiceDetailValue" rows="4" cols="50">@Html.DisplayFor(Model => Model.Description)</textarea>
        </div>

        <div class="invoiceDetailHolder">
            <label>@Html.DisplayNameFor(Model => Model.Amount):</label><br>
            <textarea disabled class="invoiceDetailValue" rows="1">@Html.DisplayFor(Model => Model.Amount)€</textarea>
        </div>

        <div class="invoiceDetailHolder">
            <label>@Html.DisplayNameFor(Model => Model.InvoiceCategory):</label><br>
            <textarea disabled class="invoiceDetailValue" rows="1">@Html.DisplayFor(Model => Model.InvoiceCategory)</textarea>
        </div>

        <div class="invoiceDetailHolder">
            <label>@Html.DisplayNameFor(Model => Model.InvoiceDate):</label><br>
            <textarea disabled class="invoiceDetailValue" rows="1">@Html.DisplayFor(Model => Model.InvoiceDate)</textarea>
            <form>
                <input asp-action="Delete" asp-route-id="@Model.InvoiceID" id="deleteButton">Delete</input>
            </form>
        </div>
    </div>
</div>